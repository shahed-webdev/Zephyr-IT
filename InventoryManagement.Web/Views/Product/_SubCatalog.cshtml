@using InventoryManagement.Repository
@model IEnumerable<ProductCatalogShow>
@{
    Layout = null;
}

    
        @foreach (var sub in Model)
        {
            <li class="childCategory d-flex justify-content-between">
                <div>
                    <span class="far fa-folder-open ic-w mr-1"></span>@sub.CatalogName
                </div>
                <div>
                    <i data-id="@sub.ProductCatalogId" class="delete fal fa-trash-alt mr-3"></i>
                    <i data-id="@sub.ProductCatalogId" class="edit fal fa-edit"></i>
                </div>
            </li>

            @if (sub.SubCatalog != null)
            {
                <partial name="_SubCatalog" model="@sub.SubCatalog" />
            }

        }
       