@using InventoryManagement.Repository
@model VendorViewModel
@{
    Layout = null;
}

<div class="modal-dialog cascading-modal" role="document">
    <div class="modal-content">
        <div class="modal-header peach-gradient white-text">
            <h4 class="m-0"><i class="fas fa-plus-circle"></i> Add Vendor</h4>
            <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>

        <div class="modal-body">
            <form data-ajax-update="#InsertModal" data-ajax="true" data-ajax-url="/Vendor/Create" data-ajax-method="post" data-ajax-success="onCreateSuccess">

                <div class="form-group">
                    <label asp-for="VendorCompanyName">Company Name</label>
                    <input asp-for="VendorCompanyName" class="form-control" required />
                    <span asp-validation-for="VendorCompanyName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="VendorName">Name</label>
                    <input asp-for="VendorName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="VendorPhone">Phone</label>
                    <input asp-for="VendorPhone" class="form-control" step="0.01" type="number" required />
                    <span asp-validation-for="VendorPhone"></span>
                    <div id="errorMessage">
                        <small class="red-text">Vendor Already Inserted</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="VendorAddress">Address</label>
                    <input asp-for="VendorAddress" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" />
                </div>

                <div class="text-center mt-1-half">
                    <button type="submit" class="btn peach-gradient mb-1 waves-effect waves-light">Create <i class="fas fa-check ml-1"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>
