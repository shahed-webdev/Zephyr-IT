@using InventoryManagement.Repository
@model IEnumerable<ExpenseCategoryWise>
@{
    ViewData["Title"] = "Expense Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="m-md-3">
    <h4 class="page-header mb-3">Expense Report</h4>
    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table table-sm table-bordered">
                <thead>
                    <tr>
                        <th class="text-left">Category</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-left">@item.CategoryName</td>
                            <td class="text-right">
                                <a href="/Expenses/ExpenseCategoryDetails/@item.CategoryName">৳@item.TotalExpense</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
