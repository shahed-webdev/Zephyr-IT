@using InventoryManagement.Repository
@model ExpenseVM
@{
    Layout = null;
}

<div class="modal-dialog cascading-modal" role="document">
    <div class="modal-content">
        <div class="modal-header peach-gradient white-text">
            <h4 class="m-0"><i class="fas fa-plus-circle"></i> Add Expense</h4>
            <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>

        <div class="modal-body">
            <form data-ajax-update="#InsertModal" data-ajax="true" data-ajax-url="/Expenses/Create" data-ajax-method="post" data-ajax-success="onCreateSuccess" data-ajax-failure="onError">
                <div class="form-row">
                    <div class="col-7">
                        <div class="form-group">
                            <label>Category</label>
                            <select name="ExpenseCategoryId" class="form-control" asp-items="ViewBag.ExpenseCategoryId" required>
                                <option value="">SELECT</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-group">
                            <label>Amount</label>
                            <input name="ExpenseAmount" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Expanse For</label>
                    <input name="ExpenseFor" class="form-control" />
                </div>

                <div class="form-row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Payment Method</label>
                            <select name="ExpensePaymentMethod" class="form-control" required>
                                <option value="">[ SELECT ]</option>
                                <option>Cash</option>
                                <option>Cheque</option>
                                <option>Bank</option>
                                <option>Bkash</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Expanse Date</label>
                            <input name="ExpenseDate" type="text" class="form-control datepicker" required />
                        </div>
                    </div>
                </div>

                <div class="text-center mt-1-half">
                    <button type="submit" class="btn peach-gradient mb-1 waves-effect waves-light">Create <i class="fas fa-check ml-1"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.datepicker').pickadate({
            clear: '',
        }).val(new Date().toDateString());
    })
</script>