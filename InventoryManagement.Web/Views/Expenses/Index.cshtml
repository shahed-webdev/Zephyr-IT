
@{
    ViewBag.Title = "Expense";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="m-3">
    <div class="row">
        <div class="col justify-content-center align-self-center">
            <h4 class="page-header mb-0">Expense</h4>
        </div>
        <div class="col text-right">
            <a id="CreateClick" data-url="/Expenses/Create" class="btn-floating peach-gradient" title="Add New">
                <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
        </div>
    </div>

    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table table-sm table-bordered">
                <thead>
                    <tr>
                        <th>Amount</th>
                        <th>Expense&nbsp;For</th>
                        <th>Expense&nbsp;Date</th>
                        <th style="width: 30px">Delete</th>
                    </tr>
                </thead>
                <tbody id="table-body">
                    <tr><td colspan='5'>Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



<!-- Insert Modal -->
<div class="modal fade" id="InsertModal" tabindex="-1" role="dialog" aria-hidden="true"></div>

<!-- update Modal -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-hidden="true"></div>


@section Scripts {
    <partial name="_UnobtrusiveAjaxPartial" />
    <script src="~/page-js/expense.js?v=1"></script>

    <script>
        const dataTable = {
            table: null,
            filter: null,
            init: function () {
                dataTable.table = $("#data-table1").DataTable({
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: "/Expense/GetExpense",
                        type: "POST"
                    },
                    columns:
                        [
                            { data: "CategoryName" },
                            { data: "ExpenseAmount" },
                            { data: "ExpenseFor" },
                            { data: "ExpenseDate", "render": function (data) { return moment(data).format('DD MMM YYYY') } },
                            { data: "ExpenseId", "render": function (data) { return `<a class="fas fa-edit update" href="/Expense/Edit/${data}"></a>`; } }
                        ],
                    columnDefs: [
                        { 'searchable': false, 'targets': [4] },
                        { 'sortable': false, 'targets': [4] },
                        { 'className': "text-left", "targets": [0, 2] }
                    ]
                });
            },
            getData: function () {
                dataTable.table ? dataTable.table.ajax.reload() : dataTable.init();
            }
        }
    </script>
}
