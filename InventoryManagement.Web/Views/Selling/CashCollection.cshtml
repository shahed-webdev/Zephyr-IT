
@{
    ViewData["Title"] = "Cash Collection Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="m-md-3">
    <h4 class="page-header mb-3">Cash Collection Report</h4>

    <div class="card card-body">
        <form id="formPost">
            <div class="d-flex align-items-center mb-5">
                <div class="md-form m-0">
                    <input type="text" id="inputFromDate" class="form-control datepicker m-0">
                    <label for="inputFromDate">From Date</label>
                </div>
                <div class="md-form m-0 ml-3">
                    <input type="text" id="inputToDate" class="form-control datepicker m-0">
                    <label for="inputToDate">To Date</label>
                </div>
                <button type="submit" class="btn btn-indigo py-2"><i class="fal fa-search"></i></button>
            </div>
        </form>


        <table id="data-table" class="table table-sm table-bordered">
            <thead>
            <tr>
                <th>#Bill No</th>
                <th>Customer Name</th>
                <th>Paid</th>
                <th>P.Method</th>
                <th>Paid Date</th>
            </tr>
            </thead>
        </table>
    </div>
</div>


@section scripts{
    <script>
        $(function() {
            $('.datepicker').pickadate();

            dataTable.getData();

            //getAmountSummery();
        });

        //get data
        var dataTable = {
            table: null,
            filter: null,
            init: function() {
                dataTable.table = $("#data-table").DataTable({
                    processing: true,
                    serverSide: true,
                    dom: '<"row"<"col-sm-6"Bl><"col-sm-6"f>><"row"<"col-sm-12"<tr>>><"row"<"col-sm-5"i><"col-sm-7"p>>',
                    buttons: dataTable.button,
                    ajax: {
                        url: "/Selling/CashCollectionData",
                        type: "POST",
                        data: function(d) {
                            d.filters = dataTable.filter;
                        }
                    },
                    columns:
                    [
                        { data: "ReceiptSn" },
                        { data: "CustomerName" },
                        { data: "PaidAmount", "render": dataTable.addSign },
                        { data: "PaymentMethod" },
                        { data: "PaidDate", "render": function(data) { return moment(data).format('DD MMM YYYY') } }
                    ],
                    columnDefs: [
                        { 'className': "text-right", "targets": [2] },
                        { 'className': "text-left", "targets": [1] }
                    ]
                });
            },
            operand: {
                Equal: 0,
                NotEqual: 1,
                GreaterThan: 2,
                LessThan: 3,
                GreaterThanOrEqual: 4,
                LessThanOrEqual: 5,
                Contains: 6,
                StartsWith: 7,
                EndsWith: 8
            },
            getData: function() {
                dataTable.table ? dataTable.table.ajax.reload() : dataTable.init();
            },
            addSign: function(data) { return `${data}/-` },
            button: {
                buttons: [{
                    extend: 'print',
                    text: '<i class="fa fa-print"></i> Print',
                    title: '',
                    exportOptions: {
                        //columns: [0,1] //Column value those print
                                                                                                                                             },
                    customize: function(win) {
                        $(win.document.body).prepend(`<nav class="mb-3 navbar peach-gradient"><a class="navbar-brand ml-1"><span>Zephyr</span> IT</a></nav><h3 class="h3-responsive">${$('h4').text()}</h3>`);
                    },
                    autoPrint: true
                }],
                dom: {
                    button: {
                        className: 'btn btn-dark btn-rounded btn-sm my-0'
                    }
                }
            }
        }

        //selectors
        const formPost = document.getElementById("formPost");

        formPost.addEventListener('submit', function(evt) {
            evt.preventDefault();

            const inputFromDate = formPost.inputFromDate.value;
            const inputToDate = formPost.inputToDate.value;

            dataTable.filter = [];

            if (inputFromDate)
                dataTable.filter.push({ Field: "PaidDate", Value: inputFromDate, Operand: dataTable.operand.GreaterThanOrEqual });

            if (inputToDate)
                dataTable.filter.push({ Field: "PaidDate", Value: inputToDate, Operand: dataTable.operand.LessThanOrEqual });


            dataTable.getData();


            const data = {
                fromDate: inputFromDate,
                toDate: inputToDate
            };

            getAmountSummery(data);
        });

        function getAmountSummery(dates) {
            //for get and set total amount
            const setSold = document.getElementById('setSold');
            const setDiscount = document.getElementById('setDiscount');
            const setPaid = document.getElementById('setPaid');
            const setDue = document.getElementById('setDue');

            const url = "/Selling/GetAmountByDate";

            $.ajax({
                type: "POST",
                url,
                data: dates,
                success: function(response) {
                    const sales = response.Data;
                    setSold.innerText = sales.SoldAmount;
                    setDiscount.innerText = sales.DiscountAmount;
                    setPaid.innerText = sales.ReceivedAmount;
                    setDue.innerText = sales.DueAmount;
                }
            });
        }
    </script>
}