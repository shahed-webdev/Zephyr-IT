@using InventoryManagement.Repository
@model SellingUpdateGetModel
@{
    ViewData["Title"] = "Update Bill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles{
    <style>
        .code-removed { text-decoration: line-through; color: gray}

        .remove { cursor: pointer }
        .remove:hover { color: #ff0000 }
        #formPayment { padding: 15px 0; color: #4f4f4f; }
        #formPayment ul { list-style-type: none; padding: 0; }
        #formPayment ul li strong { font-weight: 500; }

        table tbody tr .codeSpan span { margin-right: 5px; }
        table tbody tr .codeSpan span:not(:last-child):after { content: ',' }
        table tbody tr .codeSpan span:hover { cursor: pointer; color: #ff0000; text-decoration: line-through; }
        .inputUnitPrice { width: 90px; text-align: center }
    </style>
}

<div class="m-3">
    <h4 class="mb-1 page-header d-print-none">Update Bill #@Model.SellingSn</h4>
    <h5 class="mb-4">
        <span class="badge badge-pill badge-success">@Model.CustomerInfo.CustomerName</span>
        <span class="badge badge-pill badge-info">@Model.CustomerInfo.CustomerPhone</span>
    </h5>

    <div class="row">
        <div class="col-lg-9 mb-3">
            <div class="card card-body mb-3">
                <form id="formCode">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="md-form mt-0 mb-0 flex-1">
                            <input id="inputBarCode" autocomplete="off" type="text" class="form-control" required />
                            <label for="inputBarCode">Product code</label>
                            <span id="codeExistError" class="field-validation-error"></span>
                        </div>

                        <button id="btnFind" type="submit" class="btn btn-sm btn-brown">
                            <i class="far fa-search text-white"></i>
                            <i class="fas fa-circle-notch fa-spin" style="display:none"></i>
                        </button>
                    </div>
                </form>
            </div>

            <div class="card card-body">
                <div class="table-responsive">
                    <form id="formTable">
                        <table class="table">
                            <thead class="text-muted">
                                <tr>
                                    <th>PRODUCT</th>
                                    <th>DESCRIPTION</th>
                                    <th>WARRANTY</th>
                                    <th>QTY</th>
                                    <th>U.PRICE</th>
                                    <th>PRICE</th>
                                    <th style="width:80px">REMOVE</th>
                                </tr>
                            </thead>
                            <tbody id="t-body">
                            @foreach (var item in Model.Products)
                            {
                                <tr data-id="@item.ProductCatalogId">
                                    <td>@item.ProductCatalogName</td>
                                    <td>
                                        @item.ProductName,
                                        @item.Description
                                        @if (item.Note != null)
                                        {
                                            <span style="font-size: 12px;" class="badge badge-pill badge-secondary">@item.Note</span>
                                        }
                                        <span class="codeSpan">
                                            @foreach (var code in item.ProductCodes)
                                            {
                                                <span class="code">@code</span>
                                            }
                                        </span>
                                    </td>
                                    <td>@item.Warranty</td>
                                    <td>@item.ProductCodes.Length</td>
                                    <td><input type="number" required class="form-control inputUnitPrice" step="0.01" min="@item.SellingPrice" max="@item.SellingPrice" value="@item.SellingPrice"/></td>
                                    <td>@(item.SellingPrice * item.ProductCodes.Length)</td>
                                    <td class="text-center"><i class="fal fa-times remove"></i></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <input id="btnProduct" type="submit" style="display:none" />
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="card card-body">
                <form id="formPayment">
                    <ul class="mb-0">
                        <li class="d-flex justify-content-between align-items-center">
                            <strong>Total Amount</strong>
                            <strong>৳<span id="totalPrice">@Model.SellingTotalPrice</span></strong>
                        </li>
                        <li class="md-form mt-4">
                            <input id="inputDiscount" type="number" min="0" class="form-control" value="@Model.SellingDiscountAmount">
                            <label for="inputDiscount">Discount</label>
                        </li>
                        <li class="d-flex justify-content-between align-items-center">
                            <strong>Grand Total</strong>
                            <strong>৳<span id="totalPayable">@(Model.SellingTotalPrice - Model.SellingDiscountAmount)</span></strong>
                        </li>
                        <li class="d-flex justify-content-between align-items-center text-success py-4">
                            <strong>Paid Amount</strong>
                            <strong>৳<span id="totalPaid">@Model.SellingPaidAmount</span></strong>
                        </li>
                        <li class="d-flex justify-content-between align-items-center text-danger">
                            <strong>Total Due</strong>
                            <strong>৳<span id="totalDue">@Model.SellingDueAmount</span></strong>
                        </li>
                        <li class="md-form mt-4">
                            <input id="inputReturnAmount" type="number" min="0" class="form-control" value="0">
                            <label for="inputReturnAmount">Return Amount</label>
                        </li>
                    </ul>
                    <div class="text-center">
                        <i id="customer-error" class="mt-2 text-center red-text"></i>
                        <input type="hidden" id="hiddenSellingId" value="@Model.SellingId"/>
                        <button type="submit" id="btnSelling" class="btn peach-gradient btn-rounded btn-block mt-0">UPDATE BILL</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/page-js/bill-change.js?v=1"></script>
    <script>
        //save previous data
        cartProducts = @Html.Raw(Json.Serialize(Model.Products));
        cartProducts.forEach(function (obj, i) {
            obj.codes = []
            obj.ProductCodes.forEach(code => {
                obj.codes.push({ code, isRemove: false });
            })
        });
    </script>
}