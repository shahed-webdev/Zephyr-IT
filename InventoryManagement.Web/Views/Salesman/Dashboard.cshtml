
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_SalesmanLayout.cshtml";
}
@section Styles{
    <style>
        body { background-color: #fff; }
    </style>   
}

<div class="m-md-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="page-header">Dashboard</h4>
            <p class="mb-0">Wallet: @ViewBag.Balance</p>
        </div>
        <form id="formReceipt">
            <div class="md-form input-group m-0">
                <input name="BillNo" type="text" placeholder="Enter Bill No." class="form-control" required>
                <div class="input-group-append">
                    <button id="btnFind" class="btn btn-md btn-danger m-0 px-3" type="submit">Find Due Bill</button>
                </div>
            </div>
        </form>
    </div> 
    

    <div class="card card-body">
        <table id="data-table" class="table table-sm table-bordered">
            <thead>
            <tr>
                <th>#Bill No</th>
                <th>Customer Name</th>
                <th>Product Price</th>
                <th>Service</th>
                <th>Paid</th>
                <th>Discount</th>
                <th>Due</th>
                <th>Date</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@section scripts{
    <script>
        $(function() {
            dataTable.filter = [];
            dataTable.filter.push({ Field: "RegistrationId", Value: "@ViewBag.RegistrationId", Operand: 0 });
            dataTable.getData();
        });

        //get data
        var dataTable = {
            table: null,
            init: function() {
                dataTable.table = $("#data-table").DataTable({
                    processing: true,
                    serverSide: true,
                    buttons: dataTable.button,
                    dom: '<"row"<"col-sm-6"Bl><"col-sm-6"f>><"row"<"col-sm-12"<tr>>><"row"<"col-sm-5"i><"col-sm-7"p>>',
                    language: { infoFiltered: "" },
                    ajax: {
                        url: "/Selling/SellingRecordsData",
                        type: "POST",
                        data: function(d) {
                            d.filters = dataTable.filter;
                        }
                    },
                    columns:
                    [
                        {
                            data: "SellingSn",
                            "render": function(data, type, row, meta) {
                                return `<a class="blue-text" href="/Selling/SellingReceipt/${row.SellingId}">${data}</a>`;
                            }
                        },
                        { data: "CustomerName" },
                        { data: "SellingAmount", "render": dataTable.addSign },
                        { data: "ServiceCharge", "render": dataTable.addSign },
                        { data: "SellingPaidAmount", "render": dataTable.addSign },
                        { data: "SellingDiscountAmount", "render": dataTable.addSign },
                        {
                            data: "SellingDueAmount",
                            "render": function(data, type, row, meta) {
                                return data ? `<a class="blue-text" href="/Selling/DueCollection/${row.SellingId}">${data}/-</a><small class="d-block">${row.PromisedPaymentDate ? moment(row.PromisedPaymentDate).format('DD MMM YYYY') : ""}</small>` : data;
                            }
                        },
                        { data: "SellingDate", "render": function(data) { return moment(data).format('DD MMM YYYY') } }
                    ],
                    columnDefs: [
                        { 'searchable': false, 'targets': [2, 3, 4, 5, 6] },
                        { 'className': "text-right", "targets": [2, 3, 4, 5, 6] },
                        { 'className': "text-left", "targets": [1] }
                    ],
                    order: [[5, 'desc']]
                });
            },
            getData: function() {
                dataTable.table ? dataTable.table.ajax.reload() : dataTable.init();
            },
            addSign: function(data) { return `${data}/-` },
            button: {
                buttons: [
                    {
                        title: '',
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        exportOptions: { /*columns: [0,1] //Column value those print*/  },
                        autoPrint: true,
                        customize: function(win) {
                            $(win.document.body).prepend(`<nav class="mb-3 navbar peach-gradient"><a class="navbar-brand ml-1"><span>Zephyr</span> IT</a></nav><h3 class="h3-responsive">${$('h4').text()}</h3>`);
                        }
                    }
                ],
                dom: {
                    button: { className: 'btn btn-dark btn-rounded btn-sm my-0' }
                }
            }
        }

        //find bill
        const formReceipt = document.getElementById("formReceipt");
        formReceipt.addEventListener("submit",
            function(evt) {
                evt.preventDefault();
                this.btnFind.disabled = true;

                $.ajax({
                    url: '/Selling/FindDueBill',
                    type: "POST",
                    data: { billNo: this.BillNo.value},
                    success: response => {
                        this.btnFind.disabled = false;

                        $.notify(response.Message, response.IsSuccess ? "success" : "error");

                        if (response.IsSuccess) {
                            location.href = `/Selling/DueCollection/${response.Data}`;
                        }
                    },
                    error: error => {
                        console.log(error);
                        this.btnFind.disabled = false;
                    }
                });
            });
    </script>
}
