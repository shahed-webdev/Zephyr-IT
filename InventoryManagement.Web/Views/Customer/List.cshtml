
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles{
    <style>
        .corporate-field { display: none }
    </style>
}

<div class="m-md-3">
    <div class="row">
        <div class="col justify-content-center align-self-center">
            <h4 class="page-header mb-0">Customers</h4>
        </div>
        <div class="col text-right">
            <a id="CreateClick" href="/Customer/Add" class="btn-floating peach-gradient" title="Add New">
                <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
        </div>
    </div>

    <div class="card card-body">
        <div class="mb-3">
            <div class="custom-control custom-radio custom-control-inline">
                <input id="radioIndividual" name="IsIndividual" value="true" checked="" type="radio" class="custom-control-input" onchange="radioSelected(this)">
                <label class="custom-control-label" for="radioIndividual">Individual</label>
            </div>

            <div class="custom-control custom-radio custom-control-inline">
                <input id="radioCorporate" name="IsIndividual" value="false" type="radio" class="custom-control-input" onchange="radioSelected(this)">
                <label class="custom-control-label" for="radioCorporate">Corporate</label>
            </div>
        </div>

        <div class="table-responsive">
            <table id="data-table" class="table table-sm table-bordered">
                <thead>
                    <tr>
                        <th>
                            <span class="individual-field">Name</span>
                            <span class="corporate-field">Concerned Person</span>
                        </th>
                        <th>Mobile&nbsp;(Primary)</th>
                        <th>
                            <span class="individual-field">Working Station</span>
                            <span class="corporate-field">Corporate Name</span>
                        </th>
                        <th>Address</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody id="t-body"></tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function() {
            getData();
        });

        //on change radio
        function radioSelected(evt) {
            bindLabel(evt.value);
            getData(evt.value);
        };

        //change column by customer type
        function bindLabel(value) {
            const individual = document.querySelectorAll('.individual-field')
            const corporate = document.querySelectorAll('.corporate-field')

            if (value === 'true') {
                individual.forEach(item => {
                    item.style.display = 'block';
                })

                corporate.forEach(item => {
                    item.style.display = 'none';
                })
            } else {
                individual.forEach(item => {
                    item.style.display = 'none';
                })

                corporate.forEach(item => {
                    item.style.display = 'block';
                })
            }
        }

        //get data from server
        function getData(customerType) {
            axios.get('/Customer/CustomerList', { params: { customerType } }).then(response => {
                appendTable(response.data)
            })
        }

        //append table data
        function appendTable(data) {
            let html = ''
            data.forEach(row => {
                html += `<tr>
                        <td class="text-left"><a class="blue-text" href="/Customer/Details/${row.CustomerId}">${row.CustomerName}</a></td>
                        <td>${row.PhonePrimary}</td>
                        <td class="text-left">${row.OrganizationName}</td>
                        <td class="text-left">${row.CustomerAddress}</td>
                        <td><a class="fas fa-edit" href="/Customer/Update/${row.CustomerId}"></a></td</tr>`
            })

            //selector
            const tBody = document.getElementById('t-body');

            if (tBody.querySelectorAll('tr').length)
                $("#data-table").DataTable().destroy();

            tBody.innerHTML = '';
            tBody.innerHTML = html;

            $("#data-table").DataTable();
        }


